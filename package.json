{
	"name": "drizzle-schema-checker",
	"version": "1.1.0",
	"description": "Checks if a Drizzle schema is also valid in a database",
	"type": "module",
	"repository": "github:adrienZ/drizzle-schema-checker",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"dev": "vitest",
		"prepack": "pnpm run build",
		"test": "vitest run",
		"test:types": "tsc --noEmit",
		"test:bun": "bun test ./tests/bun-sqlite.test.bun",
		"test:d1": "vitest --root ./tests/cloudflare/",
		"test:ci": "pnpm test -- --coverage --reporter=default --reporter=junit --outputFile=./junit.xml && pnpm test:bun && test:d1",
		"lint": "biome lint",
		"format": "biome format --write",
		"release": "npm run test:types && npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags"
	},
	"keywords": [
		"drizzle",
		"database",
		"validation",
		"schema"
	],
	"author": "Adrien Zaganelli",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@cloudflare/vitest-pool-workers": "^0.5.8",
		"@cloudflare/workers-types": "^4.20240919.0",
		"@vitest/coverage-v8": "^2.1.1",
		"db0": "^0.1.4",
		"pkg-pr-new": "^0.0.24",
		"tsup": "^8.2.4",
		"typescript": "^5.6.2",
		"vitest": "^2.1.1",
		"wrangler": "^3.78.8"
	},
	"dependencies": {
		"@libsql/client": "^0.11.0",
		"better-sqlite3": "^11.3.0",
		"changelogen": "^0.5.5",
		"consola": "^3.2.3",
		"drizzle-orm": "^0.33.0",
		"zod": "^3.23.8"
	},
	"packageManager": "pnpm@9.10.0"
}
